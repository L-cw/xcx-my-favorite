page {
  background-color: #fff;
}
.profile-page .user-info {
  display: flex;
  width: 100%;
  height: 240rpx;
  padding: 0 30rpx;
  justify-content: flex-start;
  align-items: center;
  background: -webkit-linear-gradient(left, #FF4A94, #f90b2b);
}
.profile-page .user-info .img-cont {
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border: 2px solid #fff;
  margin-right: 50rpx;
}
.profile-page .user-info .img-cont > image {
  width: 100%;
  height: 100%;
}
.profile-page .user-info .login-btn {
  line-height: 1.5;
  padding: 15rpx 30rpx;
  font-size: 30rpx;
  margin: 0;
  color: #666;
  background: #fff;
}
.profile-page .user-info .nickname-box {
  line-height: 1.5;
  padding: 15rpx 30rpx;
  font-size: 40rpx;
  margin: 0;
  color: #fff;
}
.profile-page .menu-list {
  padding: 10rpx 30rpx;
}
.profile-page .menu-list .menu-item {
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.profile-page .menu-list .menu-item .icon {
  width: 42rpx;
}
.profile-page .menu-list .menu-item .page-name {
  padding-left: 20rpx;
  color: #666;
  font-size: 32rpx;
  flex-grow: 1;
}
.profile-page .menu-list .menu-item .contact-btn {
  background-color: #fff;
  text-align: left;
  line-height: 100rpx;
}
.profile-page .menu-list .menu-item .contact-btn:after {
  display: none;
}
.profile-page .menu-list .menu-item .right-arrow {
  flex-shrink: 0;
  color: #bbb;
  font-family: SimHei;
  font-weight: bold;
  font-size: 36rpx;
}
