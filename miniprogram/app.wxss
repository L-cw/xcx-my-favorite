/**app.wxss**/

@import "resources/iconfont/iconfont.wxss";
@import './components/wux/styles/index.wxss';
@import 'resources/css/base64.wxss';
.container {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}
page {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  /* background-color: #fff; */
  background-color: #f8f8f8;
}
view, navigator {
  box-sizing: border-box;
}
/* 一行超出省略 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
/* 二行超出省略 */
.ellipsis-2lines {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/* 块样式 */
.item-box {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  background-size: 100%;
  /* box-shadow: 0 0 24px 0 rgba(101,101,101,0.10); */
}
/* 带竖线的标题 */
.title-with-vertical-line {
  position: relative;
  width: 100%;
  padding-left: 20rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  color: #454CA3;
  text-align: left;
  
}
.title-with-vertical-line:before {
  position: absolute;
  left: 0;
  top: 0rpx;
  content: '';
  width: 4rpx;
  height: 30rpx;
  background-color: #454CA3;
}
/* 组件展示区域 */
.component-display-box {
  width: 100%;
  background-color: #fff;
}
/* 1像素边框 */
.border-b, .border-t, .border-l, .border-r {
  position: relative;
}
/* 下边框 */
.border-b:after { 
  position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1px;
  background-color: #EDEDED;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
}
/* 上边框 */
.border-t:after { 
  position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
