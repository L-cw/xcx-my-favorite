/* 订阅号列表样式 */
.subs-list {
  width: 100%;
  flex: 1;
  padding: 20rpx;
  background-color: #fff;
}
.subs-list .subs-item {
  width: 100%;
  display: flex;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.12);
}
.subs-list .subs-item .left {
  width: 100rpx;
}
.subs-list .subs-item .left .img-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.subs-list .subs-item .left .img-box image {
  width: 100%;
  height: 100%;
}
.subs-list .subs-item .middle {
  flex: 1;
  padding-left: 20rpx;
  overflow: hidden;
}
.subs-list .subs-item .middle .name {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #333;
  font-weight: bold;
}
.subs-list .subs-item .middle .desc {
  font-size: 28rpx;
  color: #666;
}
.subs-list .subs-item .right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.subs-list .subs-item .right .followed {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
}